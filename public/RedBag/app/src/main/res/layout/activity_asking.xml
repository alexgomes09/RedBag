<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.alexgomes.redbag.custom.CustomTextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="Are you a"
        android:textColor="@color/bloodRed"
        android:textSize="48dp"
        app:custom_font="@string/font_bold"
        app:layout_constraintBottom_toTopOf="@id/btnDonor"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="60dp"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintVertical_chainStyle="packed" />

    <com.alexgomes.redbag.custom.CustomButton
        android:id="@+id/btnDonor"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@color/bloodRed"
        android:text="donor"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/t1"
        app:layout_constraintBottom_toTopOf="@id/t2"
        app:layout_constraintVertical_chainStyle="packed" />

    <com.alexgomes.redbag.custom.CustomTextView
        android:id="@+id/t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="or"
        android:textColor="@color/bloodRed"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="27dp"
        android:textSize="30dp"
        app:custom_font="@string/font_bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnRecipient"
        app:layout_constraintTop_toBottomOf="@id/btnDonor"
        app:layout_constraintVertical_chainStyle="packed" />

    <com.alexgomes.redbag.custom.CustomButton
        android:id="@+id/btnRecipient"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@color/bloodRed"
        android:text="recipient"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/t2"
        app:layout_constraintVertical_chainStyle="packed" />
</android.support.constraint.ConstraintLayout>