<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <com.alexgomes.redbag.custom.CustomTextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:text="Name: "
        android:textSize="17sp"
        app:custom_font="@string/font_bold"
        tools:text="Name" />

    <com.alexgomes.redbag.custom.CustomTextView
        android:id="@+id/recipientName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="17sp"
        app:layout_constraintLeft_toRightOf="@id/t4"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="Alex Gomes" />

    <com.alexgomes.redbag.custom.CustomTextView
        android:id="@+id/t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="7dp"
        android:paddingRight="10dp"
        android:paddingTop="7dp"
        android:text="Needs: "
        android:textSize="17sp"
        app:custom_font="@string/font_bold"
        app:layout_constraintTop_toBottomOf="@id/t1"
        tools:text="Needs" />

    <com.alexgomes.redbag.custom.CustomTextView
        android:id="@+id/recipientBloodRequire"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="17sp"
        app:layout_constraintBaseline_toBaselineOf="@id/t2"
        app:layout_constraintLeft_toLeftOf="@id/recipientName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recipientName"
        tools:text="1 bag of blood" />

    <com.alexgomes.redbag.custom.CustomTextView
        android:id="@+id/t3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="7dp"
        android:paddingRight="10dp"
        android:text="Age: "
        android:textSize="17sp"
        app:custom_font="@string/font_bold"
        app:layout_constraintTop_toBottomOf="@id/t2"
        tools:text="Age" />

    <com.alexgomes.redbag.custom.CustomTextView
        android:id="@+id/recipientAge"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="17sp"
        app:layout_constraintBaseline_toBaselineOf="@id/t3"
        app:layout_constraintLeft_toLeftOf="@id/recipientBloodRequire"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="20 years" />

    <com.alexgomes.redbag.custom.CustomTextView
        android:id="@+id/t4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="7dp"
        android:paddingRight="10dp"
        android:text="Address: "
        android:textSize="17sp"
        app:custom_font="@string/font_bold"
        app:layout_constraintTop_toBottomOf="@id/t3"
        tools:text="Address" />

    <com.alexgomes.redbag.custom.CustomTextView
        android:id="@+id/recipientAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="3"
        android:paddingBottom="7dp"
        android:textColor="@android:color/black"
        android:textSize="17sp"
        app:layout_constraintLeft_toLeftOf="@id/recipientAge"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/t4"
        tools:text="321 South kafrul bangla Motor, Purbo pash, Dhaka 1206, Bangladesh" />

    <com.alexgomes.redbag.custom.CustomTextView
        android:id="@+id/t5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="7dp"
        android:paddingRight="10dp"
        android:text="Phone: "
        android:textSize="17sp"
        android:visibility="gone"
        app:custom_font="@string/font_bold"
        app:layout_constraintTop_toBottomOf="@id/recipientAddress"
        tools:text="Phone " />

    <com.alexgomes.redbag.custom.CustomTextView
        android:id="@+id/recipientPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="17sp"
        android:visibility="gone"
        android:autoLink="phone"
        app:layout_constraintBaseline_toBaselineOf="@id/t5"
        app:layout_constraintLeft_toLeftOf="@id/recipientAddress"
        app:layout_constraintTop_toBottomOf="@id/recipientAddress"
        tools:text="01858736219" />

    <com.alexgomes.redbag.custom.CustomTextView
        android:id="@+id/t6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="7dp"
        android:paddingRight="10dp"
        android:text="Email: "
        android:textSize="17sp"
        android:visibility="gone"
        app:custom_font="@string/font_bold"
        app:layout_constraintTop_toBottomOf="@id/t5"
        tools:text="Email " />

    <com.alexgomes.redbag.custom.CustomTextView
        android:id="@+id/recipientEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="17sp"
        android:visibility="gone"
        app:layout_constraintBaseline_toBaselineOf="@id/t6"
        app:layout_constraintLeft_toLeftOf="@id/recipientPhoneNumber"
        tools:text="a@a.com" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:background="@color/light_gray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/btn_call"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_share"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:srcCompat="@drawable/ic_call" />

    <ImageView
        android:id="@+id/btn_share"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toRightOf="@+id/btn_call"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:srcCompat="@drawable/ic_facebook" />
</android.support.constraint.ConstraintLayout>