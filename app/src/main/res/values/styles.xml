<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bloodRed</item>  <!--App bar color but we are not using appbar-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item> <!--Status bar color-->
        <item name="colorAccent">@color/bloodRed</item> <!--Button/Dialog/etc color-->
        <item name="android:windowBackground">@android:color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>
